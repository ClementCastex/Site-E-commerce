
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <header>
        <nav>
            <a href="{{ path('home_index') }}">Accueil</a>
            {% if app.user %}
                <span>Bienvenue, {{ app.user.username }}!</span> 
                <a href="{{ path('app_logout') }}">DÃ©connexion</a>
            {% else %}
                <a href="{{ path('app_login') }}">Connexion</a>
                <a href="{{ path('app_register') }}">Inscription</a>
            {% endif %}
            <a href="{{ path('product_index') }}">Catalogue</a>
            <a href="{{ path('cart_index') }}">Panier</a>
            <a href="{{ path('order_index') }}">Commande</a>
            {# SearchBar #}
            <form action="{{ path('product_search') }}" method="get" class="search-form">
            <input type="text" name="q" placeholder="Rechercher un produit..." value="{{ app.request.query.get('q') }}">
            <button type="submit">Rechercher</button>
</form>
        </nav>
    </header>

    <main>
        {% block body %}{% endblock %}
    </main>

    <footer>
        <p>&copy; 2023 Boutique en ligne</p>
    </footer>

    {% block javascripts %}{% endblock %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
</body>
</html>


